{
  "name": "lumi",
  "productName": "Lumi",
  "version": "1.0.1",
  "description": "Lumi - Local-first personal knowledge management system with real-time collaboration",
  "repository": {
    "type": "git",
    "url": "https://github.com/nupthale/lumi.git"
  },
  "main": "main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development electron .",
    "copy-web": "shx rm -rf web && shx mkdir -p web && shx cp -r ../web/dist/* web/",
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win --linux",
    "dist": "npm run copy-web && electron-builder",
    "dist:win": "npm run copy-web && electron-builder --win",
    "dist:mac": "npm run copy-web && electron-builder --mac",
    "dist:linux": "npm run copy-web && electron-builder --linux",
    "package:mac": "electron-builder build --publish never",
    "package:mac-test": "electron-builder build -c.mac.identity=null --publish never",
    "publish:mac": "./build-config/mac/mac.sh"
  },
  "keywords": [],
  "author": {
    "name": "Lumi Team",
    "email": "team@lumi.app",
    "url": "https://github.com/nupthale/lumi"
  },
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.2.2",
    "electron-log": "^5.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "express": "^5.1.0",
    "fs-extra": "^11.3.0",
    "get-folder-size": "^5.0.0",
    "nanoid": "^5.1.5",
    "nedb": "^1.8.0",
    "node-machine-id": "^1.1.12",
    "rxjs": "^7.8.2",
    "update-electron-app": "^3.1.1",
    "which": "^5.0.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.0",
    "@electron/osx-sign": "^2.2.0",
    "cross-env": "^7.0.3",
    "electron": "39.0.0",
    "electron-builder": "26.0.12",
    "png2icons": "^2.0.1",
    "rimraf": "^5.0.5",
    "sharp": "^0.34.3",
    "shx": "^0.3.4"
  },
  "build": {
    "appId": "com.pixergo.lumi",
    "productName": "Lumi",
    "copyright": "Copyright Â© 2024 Lumi Team",
    "electronVersion": "39.0.0",
    "electronDist": "node_modules/electron/dist",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "store.js",
      "update.js",
      "services/**/*",
      "web/**/*",
      "public/**/*",
      "package.json",
      "splash.html"
    ],
    "extraResources": [
      {
        "from": "public/",
        "to": "public/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/AppIcon.icns",
      "target": [{
          "target": "mas",
          "arch": "universal"
      }],
      "type": "distribution",
      "entitlements": "build-config/mac/entitlements.mac.plist",
      "entitlementsInherit": "build-config/mac/entitlements.mac.plist",
      "provisioningProfile": "build-config/mac/lumimacstore.provisionprofile",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "x64ArchFiles": "*",
      "notarize": true,
      "extendInfo": {
        "ElectronTeamID": "9SDBH87QGB",
        "CFBundleIconFile": "AppIcon.icns",
        "CFBundleIconName": "AppIcon"
      },
      "extraFiles": [
        {
          "from": "public/Assets.car",
          "to": "Resources/Assets.car"
        },
        {
          "from": "public/AppIcon.icns",
          "to": "Resources/AppIcon.icns"
        }
      ]
    },
    "pkg": {
      "isRelocatable": false,
      "overwriteAction": "upgrade"
    },
    "mas": {
      "icon": "public/AppIcon.icns",
      "hardenedRuntime": true,
      "entitlements": "build-config/mac/entitlements.mac.plist",
      "entitlementsInherit": "build-config/mac/entitlements.mac.plist"
    },
    "dmg": {
      "title": "Lumi ${version}",
      "icon": "public/icon.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "verifyUpdateCodeSignature": false,
      "publish": {
        "provider": "github",
        "owner": "nupthale",
        "repo": "lumi"
      }
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Lumi",
      "include": "build-config/installer.nsh",
      "artifactName": "Lumi-Setup-${version}.${ext}",
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeaderIcon": "public/icon.ico",
      "license": "build-config/license.txt",
      "warningsAsErrors": false
    },
    "portable": {
      "artifactName": "Lumi-Portable-${version}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png",
      "category": "Office",
      "maintainer": "Lumi Team <team@lumi.app>",
      "vendor": "Lumi Team",
      "description": "Local-first personal knowledge management system with real-time collaboration"
    },
    "publish": {
      "provider": "github",
      "owner": "nupthale",
      "repo": "lumi",
      "private": false,
      "releaseType": "release"
    }
  }
}
